{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "src",
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "paths": {
            "@/interface": ["./interface"]
        }
    },
    "include": [
        "./src/**/*.ts"
    ]
}